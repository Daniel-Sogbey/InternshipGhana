      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <a href="{{link}}" class="btn">Read More</a>
      </div>
    </div>

    {{/each}}
  </div>
</body>

</html>